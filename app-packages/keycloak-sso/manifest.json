{
  "id": "keycloak-sso",
  "type": "package",
  "name": "Keycloak SSO",
  "version": "1.0.0",
  "description": "Complete Single Sign-On solution with user, role, and permission management",
  "author": "Barrer Software",
  "license": "MIT",
  "icon": "üîê",
  "category": "Authentication",
  "tags": ["sso", "authentication", "keycloak", "security"],
  
  "plugins": [
    {
      "id": "user-management",
      "name": "User Manager",
      "icon": "üë§",
      "description": "Manage users and their attributes",
      "path": "plugins/user-management"
    },
    {
      "id": "role-management",
      "name": "Role Manager",
      "icon": "üë•",
      "description": "Create and manage roles",
      "path": "plugins/role-management"
    },
    {
      "id": "permission-management",
      "name": "Permission Manager",
      "icon": "üõ°Ô∏è",
      "description": "Fine-grained permission control",
      "path": "plugins/permission-management"
    }
  ],
  
  "backend": {
    "service": "keycloak",
    "version": "23.0",
    "docker": {
      "enabled": true,
      "composeFile": "backend/docker-compose.yml",
      "image": "quay.io/keycloak/keycloak:23.0"
    },
    "native": {
      "enabled": true,
      "installScript": "backend/install-native.sh",
      "platforms": ["linux", "windows", "macos"]
    },
    "ports": {
      "http": 8080,
      "https": 8443
    },
    "envVars": {
      "KEYCLOAK_ADMIN": "admin",
      "KEYCLOAK_ADMIN_PASSWORD": "${AUTO_GENERATED}",
      "KC_DB": "postgres",
      "KC_DB_URL": "jdbc:postgresql://localhost:5432/keycloak",
      "KC_DB_USERNAME": "keycloak",
      "KC_DB_PASSWORD": "${AUTO_GENERATED}"
    },
    "healthCheck": {
      "endpoint": "/health/ready",
      "interval": 30,
      "timeout": 10
    }
  },
  
  "requirements": {
    "minPanelVersion": "1.0.0",
    "docker": "optional",
    "postgres": "required",
    "diskSpace": "500MB",
    "memory": "2GB"
  },
  
  "installation": {
    "installer": "installer.js",
    "steps": [
      "Detect Docker availability",
      "Generate secure credentials",
      "Setup PostgreSQL database",
      "Deploy Keycloak service",
      "Configure realm and clients",
      "Install frontend plugins",
      "Test SSO connection"
    ]
  },
  
  "downloadUrl": "https://raw.githubusercontent.com/barrersoftware/Velocity-Enterprise-Plugins/main/app-packages/keycloak-sso/keycloak-sso.zip",
  "homepage": "https://github.com/barrersoftware/Velocity-Enterprise-Plugins",
  "documentation": "https://docs.velocitypanel.com/packages/keycloak-sso",
  "changelog": "https://github.com/barrersoftware/Velocity-Enterprise-Plugins/blob/main/app-packages/keycloak-sso/CHANGELOG.md"
}
